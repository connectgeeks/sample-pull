{
  "name": "generator-boreas-env",
  "version": "21.1.2",
  "description": "Generate a fully working boreas environment including terraform code, Kops configuration, ArgoCD configuration, Kubernetes workloads.",
  "homepage": "https://github.com/logrhythm/generator-boreas-env",
  "author": {
    "name": "Long Nguyen",
    "email": "long.nguyen@logrhythm.com",
    "url": "https://github.com/logrhythm/generator-boreas-env"
  },
  "private": true,
  "files": [
    "generators"
  ],
  "keywords": [
    "boreas",
    "yeoman-generator"
  ],
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "eslint": "^6.8.0",
    "eslint-plugin-sort-keys-fix": "^1.1.1",
    "jest": "^26.0.1",
    "lint-staged": "^9.4.3",
    "sinon": "^9.2.0",
    "yeoman-assert": "^3.1.1",
    "yeoman-test": "^3.0.0"
  },
  "engines": {
    "npm": ">= 4.0.0"
  },
  "dependencies": {
    "@supercharge/strings": "^1.3.0",
    "async": "^3.2.0",
    "aws-sdk": "^2.657.0",
    "axios": "^0.19.2",
    "chalk": "^2.1.0",
    "clipboardy": "^2.3.0",
    "fs-extra": "^9.0.0",
    "glob": "^7.1.6",
    "indent-string": "^4.0.0",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.19",
    "node-cleanup": "^2.1.2",
    "portfinder": "^1.0.25",
    "recast": "^0.20.4",
    "simple-git": "^2.2.0",
    "to-ast": "^1.0.0",
    "wait-on": "^4.0.2",
    "yeoman-environment": "^2.10.3",
    "yeoman-generator": "4.10.1",
    "yosay": "^2.0.1"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "env": {
      "es6": true,
      "node": true,
      "jest": true
    },
    "rules": {
      "no-case-declarations": "off",
      "semi": [
        "error",
        "never"
      ],
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true
        }
      ],
      "no-constant-condition": "off"
    },
    "plugins": [
      "sort-keys-fix"
    ]
  },
  "scripts": {
    "update-workload-configs-from-dev": "node --unhandled-rejections=strict utils/update-default-workloads-configs.js && npm run eslint:fix",
    "eslint:fix": "eslint . --fix",
    "pretest": "eslint .",
    "test": "jest"
  },
  "repository": "logrhythm/generator-boreas-env",
  "license": "MIT"
}
